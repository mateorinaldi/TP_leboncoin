<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ImageView_ac_view"
            android:layout_width="247dp"
            android:layout_height="219dp"
            android:layout_marginStart="82dp"
            android:layout_marginTop="46dp"
            android:layout_marginEnd="82dp"
            tools:srcCompat="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/TextView_ac_view_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="176dp"
            android:layout_marginTop="37dp"
            android:layout_marginEnd="177dp"
            android:layout_marginBottom="30dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/TextView_ac_view_2"
            android:layout_width="64dp"
            android:layout_height="22dp"
            android:layout_marginStart="176dp"
            android:layout_marginTop="49dp"
            android:layout_marginEnd="171dp"
            android:layout_marginBottom="338dp"
            android:text="TextView" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="120dp"
        android:layout_marginTop="500dp"
        android:layout_marginEnd="100dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/Button_map_view_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:srcCompat="@android:drawable/ic_dialog_map" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/Button_phone_view_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:srcCompat="@android:drawable/ic_menu_call" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/Button_mail_view_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:srcCompat="@android:drawable/ic_dialog_email" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>